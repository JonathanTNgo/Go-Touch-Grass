                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:maxLength="400"/>

