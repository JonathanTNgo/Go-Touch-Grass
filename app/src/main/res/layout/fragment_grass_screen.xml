<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.order.GrassScreen">

    <TextView
        android:id="@+id/temp_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:contentDescription="@string/temperature_text"
        android:textSize="35sp"
        android:textStyle="bold"
        android:layout_marginTop = "25dp"
        android:layout_marginStart="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/reminder_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintWidth_percent=".1"
        android:contentDescription="@string/reminder_txt"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/grass_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/notification_button" />

    <ImageView
        android:id="@+id/help_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".06"
        app:layout_constraintWidth_percent=".1"
        android:contentDescription="@string/help_txt"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:scaleType="fitCenter"
        app:layout_constraintTop_toBottomOf="@id/reminder_button"
        app:layout_constraintStart_toEndOf="@id/grass_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/help_button" />

    <ImageView
        android:id="@+id/grass_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".45"
        app:layout_constraintWidth_percent=".8"
        android:contentDescription="@string/grass_button_txt"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/grass_button" />

    <ImageView
        android:id="@+id/log_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent=".18"
        app:layout_constraintWidth_percent=".3"
        android:contentDescription="@string/log_txt"
        android:layout_marginBottom="20dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/log_button" />

